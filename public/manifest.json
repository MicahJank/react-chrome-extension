{
  "manifest_version": 2,

  "name": "My Extension",
  "description": "This extension is a starting point to create a real Chrome extension",
  "version": "0.0.1",
  "browser_action": {
    "default_title": "Open the popup"
  },
  "icons": {
    "16": "logo192.png",
    "48": "logo192.png",
    "128": "logo192.png" 
  },
  "background": {
    "scripts": ["./jquery.js","background/background.js"],
    "persistent": false
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "all_frames": true,
    "js": [
      "content/content.js",
      "./jquery.Jcrop.min.js",
      "./jquery.min.js"
    ],
    "run_at": "document_end"
  }],
  "permissions": [
    "activeTab",
    "storage"
  ],
  "commands": {
    "take-screenshot": {
      "suggested_key": {
        "default": "Alt+S"
      },
      "description": "Take Screenshot"
    }
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "web_accessible_resources": [
    "index.html",
    "/static/*",
    "/images/Jcrop.gif",
    "/images/pixel.png"
    
  ] 
} 
